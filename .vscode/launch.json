    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug js-problems",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/node_modules/.bin/jest",
                "--runInBand",
                "--onlyChanged"
            ],
            "windows": {
                "runtimeArgs": [
                    "--inspect-brk",
                    "${workspaceFolder}/node_modules/jest/bin/jest.js",
                    "--runInBand",
                    "--onlyChanged"
                ]
            }
        },
