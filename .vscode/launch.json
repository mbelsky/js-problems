    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug on Linux/MacOS",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}}/node_modules/.bin/jest",
                "--runInBand",
                "--onlyChanged"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Debug on Windows",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "--onlyChanged"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}
